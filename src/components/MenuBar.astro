<aside
    class="w-65 h-65 mr-10 text-[#F0F0F0] flex flex-col justify-center items-center font-anta text-2xl
    rounded-full border border-[#7232F2] transform -translate-x-60 -translate-y-15 transition-all duration-300 
    hover:scale-120 hover:border-3"
>
    <div class="swiper transform translate-x-35 h-full w-full">
        <div class="swiper-wrapper">
            <div class="swiper-slide text-center opacity-50 -translate-x-10 transition-all duration-300">About Me</div>
            <div class="swiper-slide text-center opacity-50 -translate-x-10 transition-all duration-300">Proyects</div>
            <div class="swiper-slide text-center opacity-50 -translate-x-10 transition-all duration-300">Technologies</div>
        </div>
    </div>
</aside>

<script>
    import Swiper from "swiper";
    import "swiper/css";
    

    const swiper = new Swiper(".swiper", {
        direction: "vertical",
        grabCursor: true,
        
        slidesPerView: 3,
        centeredSlides: true,
        effect: "creative",
    });

    const sections: Record<string, string> = {
    "About Me": "about",
    "Proyects": "proyects",
    "Technologies": "tech"
    };

    swiper.on("slideChange", () => {
    const activeSlide = swiper.slides[swiper.activeIndex];
    if (activeSlide) {
        const text = activeSlide.textContent.trim();
        const sectionId = sections[text];
        if (sectionId) {
        const section = document.getElementById(sectionId);
        if (section) {
            section.scrollIntoView({
            behavior: "smooth",
            block: "start"     
            });
        }
        }
    }
    });

    const observer = new IntersectionObserver(
    (entries) => {
        entries.forEach((entry) => {
        if (entry.isIntersecting) {
            const sectionId = entry.target.id;
            const slideText = Object.keys(sections).find(key => sections[key] === sectionId);

            if (slideText) {
            const allSlides = document.querySelectorAll(".swiper-slide");
            allSlides.forEach((slide, index) => {
                if (slide.textContent.trim() === slideText) {
                swiper.slideTo(index);
                }
            });
            }
        }
        });
    },
    {
        threshold: 1
    }
    );
    Object.values(sections).forEach((id) => {
    const section = document.getElementById(id);
    if (section) observer.observe(section);
    });
</script>

<style>

    .swiper .swiper-slide {
        display: flex;
        justify-content: center;
        align-items: center; 
    }

    .swiper .swiper-slide-active {
        font-size: 2rem;
        color: #7232F2;
        transform: translateX(40px);
        opacity: 1;
        text-shadow:
            0 0 5px #7232F2,  
            0 0 10px #7232F2, 
            0 0 20px #7232F2,  
            0 0 30px #7232F2; 
        
    }
</style>