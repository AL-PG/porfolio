<div class="container mx-auto max-w-300">
	<main class="flex flex-col bg-[#1F1F1F] h-100vh w-100vw">
		<section>
			<!-- ABOUT ME -->
			<article>
				<div class="text-[#F0F0F0] uppercase font-anta flex flex-col m-6">
					<h1 id="about" class="text-4xl md:text-[80px] self-center">software</h1>
					<div
						class="flex flex-row-reverse justify-evenly items-center gap-5"
					>
						<h1 class="text-4xl md:text-[80px]">developer</h1>
						<p class="text-lg md:text-[32px]">
							hi, i'm
							<span
